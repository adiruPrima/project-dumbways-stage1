<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
    />
    <style>
      body { background-color: rgb(226, 230, 234); } nav { background-color:
      rgb(244, 243, 243); } .form-control, .form-select { box-shadow: 0 0.5rem
      0.5rem rgba(0, 0, 0, 0.1); }
    </style>
  </head>
  <body>
    <!-- Navbar Start -->
    <nav class="navbar navbar-expand-md bg-grey-200">
      <div class="container">
        <a href="/" class="navbar-brand fs-2">
          <i id="logo" class="fa-solid fa-laptop-code"></i>
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navmenu"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div id="navmenu" class="collapse navbar-collapse">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a href="/" class="nav-link"><strong>Home</strong></a>
            </li>
            {{#if user}}
              <li class="nav-item">
                <a href="/add-project" class="nav-link">Add Project</a>
              </li>
            {{/if}}
            <li class="nav-item">
              <a href="/testimonials" class="nav-link">Testimonials</a>
            </li>
          </ul>
          {{#if user}}
            <a
              href="/logout"
              class="ms-auto me-3 my-2 text-light btn btn-success rounded-circle"
            ><i class="fa-regular fa-user"></i></a>
          {{else}}
            <a
              href="/login"
              class="ms-auto me-3 my-2 text-light btn btn-secondary rounded-circle"
            ><i class="fa-regular fa-user"></i></a>
          {{/if}}
          <a href="/contact" class="d-block btn btn-primary my-2">Contact Me</a>
        </div>
      </div>
    </nav>
    <!-- Navbar End -->

    <main class="container py-5">
      {{#if messages.error}}
        <div class="alert alert-danger" role="alert">{{messages.error}}</div>
      {{/if}}
      {{#if messages.success}}
        <div class="alert alert-success" role="alert">{{messages.success}}</div>
      {{/if}}
      <h1 class="text-center mb-4 fs-2">Login</h1>
      <form
        action="/login"
        method="post"
        id="loginForm"
        class="mx-auto"
        style="max-width: 30rem"
      >
        <div class="mb-3">
          <label for="email" class="form-label fw-bold">Email</label>
          <input
            type="email"
            class="form-control"
            name="email"
            id="email"
            required
          />
        </div>
        <div class="mb-3">
          <label for="password" class="form-label fw-bold">Password</label>
          <input
            type="password"
            class="form-control"
            name="password"
            id="password"
            required
          />
        </div>
        <div class="text-end">
          <button type="submit" class="btn btn-primary rounded-pill px-4 py-2">
            Submit
          </button>
        </div>
      </form>
      <p class="text-center mt-5">
        Do not have an account? Click here
        <i class="fa-solid fa-arrow-right"></i>
        <a href="/register">Register</a>
      </p>
    </main>

    <!-- Bootstrap Script -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
    ></script>
  </body>
</html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Project</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
    />
    <style>
      body { background-color: rgb(226, 230, 234); } nav { background-color:
      rgb(244, 243, 243); } .form-control, .form-select { box-shadow: 0 0.5rem
      0.5rem rgba(0, 0, 0, 0.1); }
    </style>
  </head>
  <body>
    <!-- Navbar Start -->
    <nav class="navbar navbar-expand-md bg-grey-200">
      <div class="container">
        <a href="/" class="navbar-brand fs-2">
          <i id="logo" class="fa-solid fa-laptop-code"></i>
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navmenu"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div id="navmenu" class="collapse navbar-collapse">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a href="/" class="nav-link"><strong>Home</strong></a>
            </li>
            <li class="nav-item">
              <a href="/add-project" class="nav-link">Add Project</a>
            </li>
            <li class="nav-item">
              <a href="/testimonials" class="nav-link">Testimonials</a>
            </li>
          </ul>
          {{#if user}}
            <a
              href="/logout"
              class="ms-auto me-3 my-2 text-light btn btn-success rounded-circle"
            ><i class="fa-regular fa-user"></i></a>
          {{else}}
            <a
              href="/login"
              class="ms-auto me-3 my-2 text-light btn btn-secondary rounded-circle"
            ><i class="fa-regular fa-user"></i></a>
          {{/if}}
          <a href="/contact" class="d-block btn btn-primary my-2">Contact Me</a>
        </div>
      </div>
    </nav>
    <!-- Navbar End -->

    <main class="container py-5">
      <section class="projectInput">
        <h2 class="text-center mb-4">Edit Project</h2>
        <form
          action="/edit-project/{{projects.id}}"
          method="post"
          enctype="multipart/form-data"
          id="editForm"
          class="mx-auto"
          style="max-width: 30rem"
        >
          <div class="mb-3">
            <label for="projectName" class="form-label">Project Name</label>
            <input
              type="text"
              class="form-control"
              name="projectName"
              id="projectName"
              value="{{projects.title}}"
              required
            />
          </div>
          <div class="row mb-3">
            <div class="col">
              <label for="startDate" class="form-label">Start Date</label>
              <input
                type="date"
                id="startDate"
                name="startDate"
                class="form-control"
                value="{{projects.start_date}}"
                required
              />
            </div>
            <div class="col">
              <label for="endDate" class="form-label">End Date</label>
              <input
                type="date"
                id="endDate"
                name="endDate"
                class="form-control"
                value="{{projects.end_date}}"
                required
              />
            </div>
          </div>
          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea
              class="form-control"
              name="description"
              id="description"
              rows="3"
              required
            >{{projects.description}}</textarea>
          </div>
          <div class="mb-3">
            <label class="form-label">Technologies</label>
            <div class="d-flex flex-wrap gap-3">
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  value="node-js"
                  name="tech"
                  id="node"
                  {{#if (contains "node-js" projects.technologies)}}checked{{/if}}
                />
                <label class="form-check-label" for="node">Node JS</label>
              </div>
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  value="react"
                  name="tech"
                  id="react"
                  {{#if (contains "react" projects.technologies)}}checked{{/if}}
                />
                <label class="form-check-label" for="react">React JS</label>
              </div>
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  value="vuejs"
                  name="tech"
                  id="vue"
                  {{#if (contains "vuejs" projects.technologies)}}checked{{/if}}
                />
                <label class="form-check-label" for="vue">Vue JS</label>
              </div>
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  value="js"
                  name="tech"
                  id="javascript"
                  {{#if (contains "js" projects.technologies)}}checked{{/if}}
                />
                <label class="form-check-label" for="javascript">JavaScript</label>
              </div>
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  value="java"
                  name="tech"
                  id="java"
                  {{#if (contains "java" projects.technologies)}}checked{{/if}}
                />
                <label class="form-check-label" for="java">Java</label>
              </div>
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  value="python"
                  name="tech"
                  id="python"
                  {{#if (contains "python" projects.technologies)}}checked{{/if}}
                />
                <label class="form-check-label" for="python">Python</label>
              </div>
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  value="golang"
                  name="tech"
                  id="golang"
                  {{#if (contains "golang" projects.technologies)}}checked{{/if}}
                />
                <label class="form-check-label" for="golang">Golang</label>
              </div>
            </div>
          </div>
          <div class="mb-3">
            <label for="imageUpload" class="form-label">Upload Image</label>
            <div class="input-group">
              <span class="input-group-text"><i
                  class="fa-solid fa-paperclip"
                ></i></span>
              <input
                type="file"
                class="form-control"
                name="imageUpload"
                id="imageUpload"
                accept="image/*"
              />
            </div>
          </div>
          <div class="text-end">
            <button
              type="submit"
              class="btn btn-primary rounded-pill px-4 py-2"
            >
              Submit
            </button>
          </div>
        </form>
      </section>
    </main>

    <!-- Bootstrap Script -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
    ></script>
    <!-- Edit Project Script -->
    {{! <script src="../assets/js/edit-project.js"></script> }}
  </body>
</html>
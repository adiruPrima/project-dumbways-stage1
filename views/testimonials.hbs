<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Testimonials</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
    />
    <style>
      body { background-color: rgb(226, 230, 234); } nav { background-color:
      rgb(244, 243, 243); } .testimonial-card { height: 100%; }
      .testimonial-card img { height: 200px; object-fit: cover; }
    </style>
  </head>
  <body>
    <!-- Navbar Start -->
    <nav class="navbar navbar-expand-md bg-grey-200">
      <div class="container">
        <a href="/" class="navbar-brand fs-2">
          <i id="logo" class="fa-solid fa-laptop-code"></i>
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navmenu"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div id="navmenu" class="collapse navbar-collapse">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a href="/" class="nav-link"><strong>Home</strong></a>
            </li>
            {{#if user}}
              <li class="nav-item">
                <a href="/add-project" class="nav-link">Add Project</a>
              </li>
            {{/if}}
            <li class="nav-item">
              <a href="/testimonials" class="nav-link">Testimonials</a>
            </li>
          </ul>
          {{#if user}}
            <a
              href="/logout"
              class="ms-auto me-3 my-2 text-light btn btn-success rounded-circle"
            ><i class="fa-regular fa-user"></i></a>
          {{else}}
            <a
              href="/login"
              class="ms-auto me-3 my-2 text-light btn btn-secondary rounded-circle"
            ><i class="fa-regular fa-user"></i></a>
          {{/if}}
          <a href="/contact" class="d-block btn btn-primary my-2">Contact Me</a>
        </div>
      </div>
    </nav>
    <!-- Navbar End -->

    <main class="container py-5">
      <h1 class="text-center mb-5">My Testimonials</h1>
      <div class="rating-container text-center mb-5">
        <p class="fw-bold fs-5 mb-3">Select Rating</p>
        <div class="rating-selector d-flex justify-content-center gap-3">
          <button onclick="showAllRatings()" class="btn btn-dark">All</button>
          <button onclick="showRating(1)" class="btn btn-dark">
            1<i class="fa-sharp fa-solid fa-star ms-1"></i>
          </button>
          <button onclick="showRating(2)" class="btn btn-dark">
            2<i class="fa-sharp fa-solid fa-star ms-1"></i>
          </button>
          <button onclick="showRating(3)" class="btn btn-dark">
            3<i class="fa-sharp fa-solid fa-star ms-1"></i>
          </button>
          <button onclick="showRating(4)" class="btn btn-dark">
            4<i class="fa-sharp fa-solid fa-star ms-1"></i>
          </button>
          <button onclick="showRating(5)" class="btn btn-dark">
            5<i class="fa-sharp fa-solid fa-star ms-1"></i>
          </button>
        </div>
      </div>
      <div
        id="testimonial-deck"
        class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4"
      ></div>
    </main>

    <!-- Bootstrap Script -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
    ></script>
    <!-- Testimonials Script -->
    <script src="../assets/js/testimonials.js"></script>
  </body>
</html>